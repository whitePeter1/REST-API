<h3> Search For User </h3>
<form action="/user/search" method="POST">
<input type="text" name = "Search"> 
<input type="Submit" name = "Submit">
<style>
    table, th, td {
  border: 1px solid black;
}
</style>

<table width = "100%">
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>FullName</th>
      <th>Address</th>
      <th>Zip</th>
      <th>Country</th>
      <th>Password</th>
      <th>Email</th>
      <th>Role</th>

    </tr>
    <% if(typeof resul !== 'undefined' && resul.length > 1){ %>
        <% resul.forEach(user =>{ %>
    <tr>
      <td><%= user._id %></td>
      <td><%= user.Username %></td>
      <td><%= user.FullName %></td>
      <td><%= user.Address %></td>
      <td><%= user.zip %></td>
      <td><%= user.Country %></td>
      <td><%= user.Password %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <% }) %> <% } else {%>
        <td><%= resul._id %></td>
      <td><%= resul.Username %></td>
      <td><%= resul.FullName %></td>
      <td><%= resul.Address %></td>
      <td><%= resul.zip %></td>
      <td><%= resul.Country %></td>
      <td><%= resul.Password %></td>
      <td><%= resul.email %></td>
      <td><%= resul.role %></td>
      <% } %>
      <%= resul = " " %> 
      
    </tr>
  </table>
</form>
